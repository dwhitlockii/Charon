# Database Configuration
CHARON_DB_TYPE=sqlite
CHARON_DB_PATH=data/charon.db

# MySQL Configuration (when CHARON_DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=charon
MYSQL_USER=charon
MYSQL_PASSWORD=change_this_in_production

# Security Settings
CHARON_SECRET_KEY=change_this_to_a_random_string_in_production
CHARON_SECURE_COOKIES=false

# Logging Configuration
CHARON_LOG_LEVEL=info
CHARON_LOG_FILE=logs/charon.log

# Web Server Settings
CHARON_HOST=0.0.0.0
CHARON_PORT=5000
CHARON_DEBUG=true

# Content Filter Settings
CHARON_CONTENT_FILTER_ENABLED=true
CHARON_CONTENT_FILTER_DEFAULT_ACTION=block

# QoS Settings
CHARON_QOS_ENABLED=false
CHARON_QOS_DEFAULT_BANDWIDTH=10Mbit 